<h1>Listing wfiles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
  </tr>
<% @files_.each do |wfile| %>
  <tr>
    <td><%=h wfile.name %></td>
    <%if wfile.type == "1"  %>
    <td><%= link_to 'Show', wfile_path(wfile.id) %></td>
    <%else %>
    <td><%= link_to 'Show', wfile_path(wfile.id,:type => "sym" ) %></td>
	<%end%>
  </tr>
<% end %>

</table>

