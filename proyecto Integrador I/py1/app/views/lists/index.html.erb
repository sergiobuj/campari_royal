<h1>Mis listas</h1>
<table>
  <tr>
    <th>Nombre</th>
    <th>Fecha</th>
  </tr>

<% for list in @lists %>
  <tr>
    <td><%=h list.name %></td>
    <td><%=h list.date %></td>
    <td><%= link_to 'Ver', [@user, list] %></td>
    <td><%= link_to 'Editar', edit_user_list_path(@user, list) %></td>
    <td><%= link_to 'Eliminar', [@user, list], :confirm => 'Â¿Seguro desea eliminar la lista?', :method => :delete %></td>
  </tr>
<% end %>
</table>

