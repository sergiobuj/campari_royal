<h1>Listado de  productos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Sección</th>
    <th>Ubicación</th>
  </tr>

<% for product in @products %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.section %></td>

    <% if product.ubication.nil? -%>
    <td><%=h "Ninguna" %></td>
    <% else -%>
    <td><%=h product.ubication.name %></td>
    <% end -%>


    <td><%= link_to 'Ver', product %></td>
    <td><%= link_to 'Editar', edit_product_path(product) %></td>
    <td><%= link_to 'Eliminar', product, :confirm => '¿Seguro desea eliminar el producto?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo producto', new_product_path %>
